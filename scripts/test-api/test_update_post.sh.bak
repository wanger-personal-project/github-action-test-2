#!/bin/bash

# 更新文章 API
# 用法: ./test_update_post.sh <cookie_file> <post_id> <title> [content] [status]

set -e

BASE_URL="${API_BASE_URL:-http://localhost:3000}"

if [ $# -lt 3 ]; then
  echo "Usage: $0 <cookie_file> <post_id> <title> [content] [status]"
  echo "Example: $0 /tmp/session.txt 'abc-123-uuid' 'Updated Title' 'New content' 'published'"
  exit 1
fi

COOKIE_FILE="$1"
POST_ID="$2"
TITLE="$3"
CONTENT="${4:-}"
STATUS="${5:-}"

if [ ! -f "$COOKIE_FILE" ]; then
  echo "Error: Cookie file not found: $COOKIE_FILE"
  exit 1
fi

echo "========================================="
echo "Testing Update Post API"
echo "========================================="
echo "Post ID: $POST_ID"
echo "Title: $TITLE"
echo "Using session: $COOKIE_FILE"
echo ""

# 构建 JSON（只包含提供的字段）
JSON="{\"id\": \"$POST_ID\", \"title\": \"$TITLE\""
[ -n "$CONTENT" ] && JSON="$JSON, \"content\": \"$CONTENT\""
[ -n "$STATUS" ] && JSON="$JSON, \"status\": \"$STATUS\""
JSON="$JSON}"

curl -X PUT "$BASE_URL/api/posts/update" \
  -H "Content-Type: application/json" \
  -b "$COOKIE_FILE" \
  -d "$JSON" \
  -w "\n\nHTTP Status: %{http_code}\n" \
  2>/dev/null | python3 -m json.tool 2>/dev/null || cat

echo ""
echo "========================================="
